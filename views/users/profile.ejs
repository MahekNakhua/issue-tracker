<% layout('layouts/boilerplate') %>

    <div class="row container d-flex justify-content-center mt-5">
        <div class="col-lg-8">
            <div class="card user-card-full cardIssue">
                <div class="row">
                    <div class="col-sm-4 bg-c-lite-green user-profile">
                        <div class="card-block text-center text-white mt-5">
                            <div> <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image"> </div>
                            <h4 class="font-weight-bold overrideBlue"><%= currentUser.username  %> </h4>
                            <p class="overrideBlue"><%= currentUser.role  %></p> 
                        </div>
                    </div>
                    <div class="col-sm-8 card-body">
                        <div class="card-block">
                            <h5 class="font-weight-bold mt-3">Information</h5>
                            <div class="row">
                                <div class="col-sm-6">
                                    <p class="font-weight-bold">Email</p>
                                    <h6 class="text-muted"><%= currentUser.email  %></h6>
                                </div>
                            </div>
                            <h5 class="font-weight-bold mt-5">Statistics</h5>
                            <div class="row">
                                <div class="col-sm-6">
                                    <p class="font-weight-bold">Issues By Me</p>
                                    <h6 class="text-muted font-weight-light"><%= issueCount  %></h6>
                                </div> 
                                <div class="col-sm-6">
                                    <p class="font-weight-bold">Comments By Me</p>
                                    <h6 class="text-muted font-weight-light"><%= commentCount  %></h6>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>