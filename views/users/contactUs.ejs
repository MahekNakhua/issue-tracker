<% layout('layouts/template')%>

  <div class="background">
    <div class="container">
      <div class="screen">
        <div class="screen-header">
          <div class="screen-header-left">
            <div class="screen-header-button maximize"></div>
            <div class="screen-header-button minimize"></div>
            <!-- <div class="screen-header-button close"></div> -->
          </div>
          <div class="screen-header-right">
            <div class="screen-header-ellipsis"></div>
            <div class="screen-header-ellipsis"></div>
            <div class="screen-header-ellipsis"></div>
          </div>
        </div>
        <div class="screen-body">
          <div class="screen-body-item left">
            <div class="app-title">
              <span class="font-weight-bold">CONTACT</span>
              <span class="font-weight-bold">US</span>
            </div>
            <div class="app-contact font-weight-bold">CONTACT INFO : +91 7738695956 </div>
          </div>
          <form action="/home" method="GET">
            <div class="screen-body-item">
              <div class="app-form">
                <div class="app-form-group">
                  <input class="app-form-control font-weight-bold" placeholder="NAME">
                </div>
                <div class="app-form-group">
                  <input class="app-form-control font-weight-bold" placeholder="EMAIL">
                </div>
                <div class="app-form-group">
                  <input class="app-form-control font-weight-bold" placeholder="CONTACT NO">
                </div>
                <div class="app-form-group message">
                  <input class="app-form-control font-weight-bold" placeholder="MESSAGE">
                </div>
                <div class="app-form-group buttons">
                  <button class="app-form-button font-weight-bold">CANCEL</button>
                  <button class="app-form-button font-weight-bold">SEND</button>
                </div>
            </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>